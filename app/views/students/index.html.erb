<h1>All Students</h1>

<%= form_tag students_path, method: :get do %>
    <%= label_tag  "Search student by name:" %>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag 'Search', name: nil %>
<% end %>
<br>

<ul>  
    <% @students.each do |s| %>
        <%= render partial: 'student', locals: {student: s} %>
        <br>
    <% end %>
</ul>